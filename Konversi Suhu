#include <stdio.h> 
#include <conio.h>

main()
{
	float celcius;
   float fahrenheit;
   float reamur;
   celcius=0;
   printf("\t\tkonversi suhu celsius ke fahrenheit,reamur\t\t""\n\n""\t\tmasukan data celcius yang akan dikonversi\t\t");
   printf("\n\n""================================================================================");
	scanf("%f",&celcius);
   fahrenheit=celcius*1.8+32;
   reamur=celcius*0.8;
   printf("jadi %2.4f celcius adalah %2.4f fahrenheit dan %2.4f reamur",celcius,fahrenheit,reamur);
   printf("\n\n\n\n\n\n\n\n\n""\t\t Created by : Dicky Muh Oktavianto \t\t");
	getch();
}
